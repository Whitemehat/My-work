<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_default" />
            <stroke android:width="@dimen/border_size_default" android:color="@color/textColorHint" />
            <solid android:color="@color/windowBackground" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_default" />
            <stroke android:width="@dimen/border_size_default" android:color="@color/colorAccent" />
            <solid android:color="@color/windowBackground" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_default" />
            <stroke android:width="@dimen/border_size_default" android:color="@color/colorPrimary" />
            <solid android:color="@color/windowBackground" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_default" />
            <stroke android:width="@dimen/border_size_default" android:color="@color/textColorHint" />
            <solid android:color="@color/windowBackground" />
        </shape>
    </item>
</selector>